{
  "realm": "foo",
  "name": "bar_foreach",
  "type": "tract",
  "actions": [
    {
      "name": "engram-foreach",
      "action": "foreach",
      "origin": {
        "smt": "$:engrams",
        "pattern": {
          "match": {
            "tags": "${tag}"
          },
          "fields": [ "smt", "fields" ]
        }
      },
      "terminal": {
        "smt": "json|stream:*|*|*",
        "options": {
          "results_separator": ","
        }
      },
      "actions": [
        {
          "name": "each-entry",
          "action": "transfer",
          "origin": {
            "smt": "=${smt}",
            "options": {
              "encoding": { "fields": "=${fields}"}
            },
            "pattern": {
              "match": {
                "Foo": "${Foo}"
              }
            }
          },
          "terminal": {
            "smt": "$:smt"
          }
        }
      ]
    }
  ]
}
