{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "dev",
      "request": "launch",
      "type": "node",
      "envFile": "${workspaceFolder}/.env.development",
      "program": "${workspaceFolder}/test/main.js",
      "runtimeArgs": [
        "--inspect",
        "--preserve-symlinks"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "nodemon",
      "request": "launch",
      "type": "pwa-node",
      "envFile": "${workspaceFolder}/.env.development",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/test/main.js",
      "restart": true,
      "runtimeExecutable": "nodemon",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    },
    {
      "name": "prod",
      "request": "launch",
      "type": "node",
      "envFile": "${workspaceFolder}/.env.production",
      "program": "${workspaceFolder}/test/main.js",
      "runtimeArgs": [
        "--inspect",
        "--preserve-symlinks"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outputCapture": "std"
    }
  ]
}
