  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "port": 9229,
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch test/main.js",
      "program": "${workspaceFolder}/test/main.js",
      "port": 9229,
      "runtimeArgs": ["--inspect-brk", "--preserve-symlinks"],
      "env": {
        "NODE_ENV": "development",
        "LOG_LEVEL": "verbose"
      },
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "nodemon",
      "runtimeExecutable": "nodemon",
      "runtimeArgs": [
        "--preserve-symlinks",
        "--inspect-brk"
      ],
      "env": {
        "DEBUG": "express:*"
      },
      "program": "${workspaceFolder}/test/main.js",
      "restart": true,
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
