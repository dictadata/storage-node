  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "run debug",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "debug"
      ],
      "envFile": "${workspaceFolder}/.env.development",
      "port": 9229,
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "run nodemon",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "nodemon"
      ],
      "envFile": "${workspaceFolder}/.env.development",
      "port": 9229,
      "outputCapture": "std"
    }
  ]
}
